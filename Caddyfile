# =============================================================================
# HAIRVEN SALON - CADDY REVERSE PROXY CONFIGURATION
# =============================================================================
# Production-ready Caddy configuration with:
# - Automatic HTTPS via Let's Encrypt
# - Security headers
# - Compression
# - Rate limiting
# - Cloudflare IP forwarding
# =============================================================================

# Global options
{
    # Email for Let's Encrypt
    email admin@sishairven.com
    
    # Enable debug mode (remove in production)
    # debug
    
    # Auto HTTPS
    auto_https off
}

# HTTP redirect to HTTPS
http://sishairven.com, http://www.sishairven.com {
    redir https://{host}{uri} permanent
}

# Main site configuration
https://sishairven.com, https://www.sishairven.com {
    # Trusted proxies (Cloudflare IPs)
    trusted_proxies static private_ranges
    
    # Real IP from Cloudflare
    @cloudflare {
        remote_ip 173.245.48.0/20 103.21.244.0/22 103.22.200.0/22 103.31.4.0/22 \
                  141.101.64.0/18 108.162.192.0/18 190.93.240.0/20 188.114.96.0/20 \
                  197.234.240.0/22 198.41.128.0/17 162.158.0.0/15 104.16.0.0/13 \
                  104.24.0.0/14 172.64.0.0/13 131.0.72.0/22
    }
    
    # Security headers
    header {
        # Strict Transport Security
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Permissions policy
        Permissions-Policy "camera=(), microphone=(), geolocation=(self), interest-cohort=()"
        
        # Remove server identification
        -Server
        -X-Powered-By
    }
    
    # Compression
    encode gzip zstd
    
    # Cache static assets
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.svg *.webp *.ico *.woff *.woff2 *.ttf
    }
    header @static {
        Cache-Control "public, max-age=31536000, immutable"
    }
    
    # Rate limiting (using crowdsec or similar)
    # rate_limit {
    #     zone static_example {
    #         key static
    #         events 100
    #         window 1m
    #     }
    # }
    
    # Reverse proxy to SvelteKit app
    reverse_proxy hairven:3000 {
        # Health check
        health_uri /healthz
        health_interval 30s
        health_timeout 10s
        
        # Headers
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        
        # Pass Cloudflare headers
        header_up CF-Connecting-IP {http.request.header.CF-Connecting-IP}
        header_up CF-IPCountry {http.request.header.CF-IPCountry}
        header_up CF-IPCity {http.request.header.CF-IPCity}
        header_up CF-IPLatitude {http.request.header.CF-IPLatitude}
        header_up CF-IPLongitude {http.request.header.CF-IPLongitude}
    }
    
    # Logging
    log {
        output file /var/log/caddy/access.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_days 30
        }
        format json
    }
}

# Health check endpoint (for monitoring)
:8080 {
    respond /healthz "OK" 200
}
